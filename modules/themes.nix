{ config, pkgs, lib, ... }:

with lib;
let
  mkColorOption = name: {
    inherit name;
    value = mkOption {
      type = types.strMatching "#[a-fA-F0-9]{6}";
      description = "Hexadecimal colors";
      default = "#000000";
    };
  };

  colors = [
    "rosewater"
    "flamingo"
    "pink"
    "mauve"
    "red"
    "maroon"
    "peach"
    "yellow"
    "green"
    "teal"
    "sky"
    "sapphire"
    "blue"
    "lavender"
    "text"
    "subtext1"
    "subtext0"
    "overlay2"
    "overlay1"
    "overlay0"
    "surface2"
    "surface1"
    "surface0"
    "base"
    "mantle"
    "crust"
  ];

  mkThemesOption = name: {
    inherit name;
    value.colors = listToAttrs (map mkColorOption colors);
  };

  catppucinThemes = [ "frappe" "mocha" ];
in
{
  options.themes = listToAttrs (map mkThemesOption catppucinThemes);

  config.themes =
    {
      mocha.colors = {
        rosewater = "#f5e0dc";
        flamingo = "#f2cdcd";
        pink = "#f5c2e7";
        mauve = "#cba6f7";
        red = "#f38ba8";
